<?xml version='1.0' encoding='utf-8'?>
<widget id="com.africoders" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Africoders</name>
    <description>
        Where Developers Collaborate &amp; Build Awesome Stuffs
    </description>
    <author email="support@africoders.com" href="https://africoders.com">
        Africoders Team
    </author>
    <content src="index.html" />
    <access origin="https://africoders.test*" subdomains="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
